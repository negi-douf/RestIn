<div class="container">
  
  <% @tweets.each do |tweet| %>
    
    <div class="row">
      <div class="col col-sm-8 col-xs-offset-1 col-xs-10">
        <p> <%= tweet.content %> </p>
        
        <!-- 対象のパスへ移動する際に id を指定すると
  　      　これだけで移動できる -->
        <%= link_to "編集", edit_tweet_path(tweet.id), class: "btn btn-default btn-sm btn-primary" %>
        
        
        <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-default btn-sm btn btn-danger" %>
        
      </div>
    </div>
      
  <% end %>
  
</div>
